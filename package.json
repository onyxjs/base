{
  "name": "onyx",
  "version": "0.0.0",
  "description": "WIP: A modular modern TypeScript testing framework.",
  "repository": "git@github.com:onyxjs/onyx.git",
  "author": "Elijah Kotyluk <elijah@elijahkotyluk.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "npx git-cz",
    "test": "lerna run test --stream",
    "lint": "lerna run --no-bail lint:wotan --stream",
    "lint:fix": "lerna run --no-bail lint:fix --stream",
    "build": "lerna run build --stream",
    "dev": "lerna run dev --stream",
    "watch": "lerna run watch --stream",
    "dev:docs": "lerna run dev --stream --scope @onyx/docs",
    "build:docs": "lerna run build --stream --scope @onyx/docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.[jt]s": [
      "lerna run lint:fix --",
      "git add",
      "lerna run test -- --bail --findRelatedTests"
    ]
  },
  "devDependencies": {
    "commitizen": "^3.1.1",
    "husky": "^2.7.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1"
  }
}
