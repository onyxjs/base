{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext",
      "dom"
    ],
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
