{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
