{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "paths": {
      "@onyx/matchers": ["../matchers"]
    }
  },
  "exclude": [
    "node_modules",
    "**/test/*"
  ],
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "../matchers" },
    { "path": "../mock" }
  ]
}
